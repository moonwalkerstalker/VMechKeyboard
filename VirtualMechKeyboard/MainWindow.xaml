<Window x:Class="VirtualMechKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtual Mech Keyboard" Height="200" Width="200">
    
    <Grid VerticalAlignment="Center" Margin="20">
        <TextBlock>Virtual Mech Keyboard</TextBlock>

        <!-- Display an SVG image using the SvgImageConverter -->
        <Image x:Name="KeycapImage" Source="Assets/keycap_up.png" Width="100" Height="100"/>
        
        <Button Height="20" Width="100" Content="PRESS ANY KEY" />
        
    </Grid>
</Window>